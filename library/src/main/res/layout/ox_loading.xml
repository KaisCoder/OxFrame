<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ox_loading_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/Ox_White"
    android:orientation="horizontal"
    android:padding="20dp">

    <ProgressBar
        android:id="@+id/ox_loading_progressbar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/ox_loading_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/xloading_dialog_message"
        android:textColor="@color/XFrame_loading_dialog_message"
        android:textSize="@dimen/XFrame_text_size_small" />

</LinearLayout>
